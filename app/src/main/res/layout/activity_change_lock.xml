<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SplashActivity"
    android:background="@drawable/bg"
    android:id="@+id/con">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@drawable/btn_back"
        android:layout_margin="20dp"
        android:id="@+id/iv_back"
        tools:ignore="MissingConstraints">

    </ImageView>
    <LinearLayout
        android:id="@+id/ll_per"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="104dp"
        android:orientation="vertical"
        >


        <ImageView
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_bg">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="AppLock"
            android:fontFamily="@font/dam"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/thuong"
            android:text="@string/protect"
            android:layout_marginBottom="10dp"
            android:textColor="#fff">

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:orientation="vertical"
            android:layout_margin="30dp"
            android:background="@drawable/bg_rl_per">

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/choose"
                android:fontFamily="@font/dam"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#fff"
                android:layout_marginTop="30dp">

            </TextView>

            <ImageView
                android:id="@+id/iv_pin"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_pin"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="30dp">
            </ImageView>
            <ImageView
                android:id="@+id/iv_pattern"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_pattern"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="70dp"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true">

            </ImageView>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_tick_no"
                android:layout_below="@+id/iv_pin"
                android:id="@+id/iv_tick_pin"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="70dp">
            </ImageView>


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_tick_no"
                android:layout_below="@+id/iv_pattern"
                android:layout_alignParentEnd="true"
                android:id="@+id/iv_tick_pattern"
                android:layout_marginTop="30dp"
                android:layout_marginRight="70dp"
                android:layout_alignParentRight="true">
            </ImageView>

        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>